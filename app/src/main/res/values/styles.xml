<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ToggleButtonStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="android:background">@drawable/custom_button_start</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textOff">@string/start_resume_text</item>
        <item name="android:textOn">@string/pause_text</item>
    </style>

    <style name="DurationDistanceStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DurationDistanceLabelStyle">
        <item name="android:textColor">#AFACAC</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>